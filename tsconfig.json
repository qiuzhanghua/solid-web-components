{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "strict": false,
    "module": "ESNext",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "jsxImportSource": "solid-js",
    "types": [
      "vite/client",
    ],
    "noEmit": false,
    "noEmitOnError": false,
    "isolatedModules": true,

    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowJs": true,
    "jsx": "preserve",
    "target": "esnext",
    "outDir": "dist/types",
    "moduleResolution": "node",
  }
}
